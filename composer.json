{
    "name": "joaopedro214/buscador-cursos",
    "description": "Projeto que busca cursos no site da alura com Composer.",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Alura\\BuscadorDeCursos\\": "src/"
        }
    },
    "authors": [
        {
            "name": "nome",
            "email": "email@email.com"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^7.9",
        "symfony/dom-crawler": "^6.0",
        "symfony/css-selector": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.2",
        "squizlabs/php_codesniffer": "^3.13",
        "phan/phan": "^5.5"
    },
    "scripts": {
        "test": "phpunit tests/TestBuscadorDeCursos.php",
        "cs": "phpcs --standard=PSR12 src/",
        "cbf": "phpcbf --standard=PSR12 src/",
        "phan": "phan --allow-polyfill-parser",
        "check": [
            "@phan",
            "@cs",
            "@test"
        ],
        "post-update-cmd": [
            "@test"
        ]
    },
    "scripts-descriptions": {
        "check": "Roda as verificações de código. PHAN, PHPCS e PHPUnit.",
        "test": "Roda os testes do PHPUnit.",
        "cs": "Verifica o código com PHPCS.",
        "cbf": "Corrige o código com PHPCBF.",
        "phan": "Roda o Phan para análise estática do código."
    }
}
